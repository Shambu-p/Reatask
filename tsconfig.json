{
  // "ts-node": {
  //   // these options are overrides used only by ts-node
  //   "compilerOptions": {
  //     "module": "commonjs"
  //   }
  // },
  "compilerOptions": {
    "target": "es2017",
    "module": "es2022",
    "allowJs": true,
    "outDir": "build",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}